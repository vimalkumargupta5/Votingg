<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewVoterRequest">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#eafafd">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register As New Voter"
                android:fontFamily="@font/nunito_bold"
                android:textSize="20sp"
                android:gravity="center"
                android:background="#FF5722" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill all the required details.Make sure the provided info is 100% correct!"
                android:fontFamily="sans-serif"
                android:textSize="10sp"
                android:gravity="center"
                android:background="#c5c5c5"/>
            <EditText
                android:id="@+id/fullname_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Enter Full Name"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"/>
            <EditText
                android:id="@+id/fathername_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Enter Father`s Name"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"
                />
            <EditText
                android:id="@+id/uid_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Enter UID Number"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"
                />
            <EditText
                android:id="@+id/mno_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Enter Mobile Number"
                android:gravity="center"
                android:inputType="phone"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"
                />
            <EditText
                android:id="@+id/dob_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="DOB: DD/MM/YYYY"
                android:gravity="center"
                android:inputType="date"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"
                />
            <EditText
                android:id="@+id/email_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="E-mail Address"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"
                />
            <EditText
                android:id="@+id/addressone_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Address Line 1"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"/>
            <EditText
                android:id="@+id/addresstwo_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Address Line 2"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"
                />
            <EditText
                android:id="@+id/state_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="State"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"
                />
            <EditText
                android:id="@+id/district_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="District"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"
                />
            <EditText
                android:id="@+id/pin_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="PIN Code"
                android:gravity="center"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"
                />
            <EditText
                android:id="@+id/gender_txt"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:hint="Gender"
                android:gravity="center"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:background="@drawable/circlebackground"
                />

            <Button
                android:id="@+id/register_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/result_shape"/>




        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>