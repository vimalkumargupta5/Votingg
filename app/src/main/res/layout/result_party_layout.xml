<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="380dp"
        android:layout_height="240dp"
        android:layout_gravity="center"

        >
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="240dp"
            android:orientation="horizontal"
            android:background="#235"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/partylogo_text"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/partylogo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/result_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:fontFamily="@font/nunito_bold"/>
                <TextView
                    android:id="@+id/partyname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Party Name"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/nunito_bold"/>
                <TextView
                    android:id="@+id/totalvotes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Votes"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/nunito_bold"/>
                <TextView
                    android:id="@+id/obtainedvotes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obtained Votes"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/nunito_bold"/>
                <TextView
                    android:id="@+id/seats_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Seats"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/nunito_bold"/>
                <TextView
                    android:id="@+id/voteshare_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vote Share"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="#fff"
                    android:fontFamily="@font/nunito_bold"/>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>